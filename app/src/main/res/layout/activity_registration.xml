<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="handlers"
            type="com.adabala.firechat.RegistrationActivity"/>
        <variable
            name="showPhoneNumberInput"
            type="boolean"/>
        <variable
            name="verificationCode"
            type="String"/>
        <variable
            name="phoneNumber"
            type="String"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/number_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="@{ showPhoneNumberInput ? View.VISIBLE : View.GONE }">
            <com.hbb20.CountryCodePicker
                android:id="@+id/country_code_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorWhite"
                app:ccp_countryPreference="FI">
            </com.hbb20.CountryCodePicker>
            <EditText
                android:id="@+id/number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edit_text_margin"
                android:gravity="center_horizontal"
                android:hint="@string/number_input_hint"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:text="@={phoneNumber}"
                android:inputType="phone"/>
            <Button
                android:id="@+id/verify_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:background="@drawable/rounded_cornor_background"
                android:text="@string/verify_text"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textSize="@dimen/button_text_size"
                android:layout_margin="@dimen/button_margins"
                android:padding="@dimen/button_text_padding"
                android:onClick="@{handlers::onVerifyClicked}"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="@{ showPhoneNumberInput ? View.GONE : View.VISIBLE }">
            <EditText
                android:id="@+id/code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edit_text_margin"
                android:gravity="center_horizontal"
                android:hint="@string/code_input_hint"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:text="@={verificationCode}"
                android:inputType="number"/>
            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:background="@drawable/rounded_cornor_background"
                android:text="@string/register_text"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textSize="@dimen/button_text_size"
                android:layout_margin="@dimen/button_margins"
                android:padding="@dimen/button_text_padding"
                android:onClick="@{handlers::onRegisterClicked}"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
